// Compiles and runs the directory's tsconfig.json.
{
    "version": "2.0.0",

    "tasks": [
        {
            "label": "Compile TypeScript Project",
            "type": "shell",
            "command": "browserify Src/index.ts -p [ tsify --noImplicitAny ] > App/bundle.js",
            "presentation": {
                "showReuseMessage": true,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}